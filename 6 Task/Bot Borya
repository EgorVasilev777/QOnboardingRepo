import telebot

TOKEN = '1861563195:AAF27cUqAHVTZeTUb3H9XYL4PZwMsXPhEQg'
joke_the_boris_bot = telebot.TeleBot(TOKEN)


@joke_the_boris_bot.message_handler(commands=['start'])
def start(message):
    sent = joke_the_boris_bot.send_message(message.chat.id, 'Как тебя зовут?')
    joke_the_boris_bot.register_next_step_handler(sent, hello)


def hello(message):
    joke_the_boris_bot.send_message(message.chat.id, 'Привет, {name}. Рад тебя видеть.'.format(name=message.text))


joke_the_boris_bot.polling()
